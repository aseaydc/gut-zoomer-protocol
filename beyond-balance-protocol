    <script>
        function generateProtocol() {
            const patientName = document.getElementById('patientName').value || 'Patient';
            const testDate = document.getElementById('testDate').value || 'Not specified';
            const age = document.getElementById('age').value;

            // Collect all selected markers
            const bacteria = Array.from(document.querySelectorAll('input[name="bacteria"]:checked')).map(cb => cb.value);
            const protozoa = Array.from(document.querySelectorAll('input[name="protozoa"]:checked')).map(cb => cb.value);
            const helminths = Array.from(document.querySelectorAll('input[name="helminths"]:checked')).map(cb => cb.value);
            const fungi = Array.from(document.querySelectorAll('input[name="fungi"]:checked')).map(cb => cb.value);
            const viruses = Array.from(document.querySelectorAll('input[name="viruses"]:checked')).map(cb => cb.value);
            const inflammatory = Array.from(document.querySelectorAll('input[name="inflammatory"]:checked')).map(cb => cb.value);
            const antibodies = Array.from(document.querySelectorAll('input[name="antibodies"]:checked')).map(cb => cb.value);
            const digestion = Array.from(document.querySelectorAll('input[name="digestion"]:checked')).map(cb => cb.value);
            const commensals = Array.from(document.querySelectorAll('input[name="commensals"]:checked')).map(cb => ({
                name: cb.value,
                category: cb.dataset.category
            }));

            // Check if H. pylori is selected
            const hasHPylori = bacteria.includes('Helicobacter pylori');
            const hasBacteria = bacteria.length > 0;
            const hasProtozoa = protozoa.length > 0;
            const hasHelminths = helminths.length > 0;
            const hasFungi = fungi.length > 0;
            const hasViruses = viruses.length > 0;
            const hasInflammation = inflammatory.length > 0;
            const hasLeakyGut = digestion.includes('Fecal Zonulin (elevated)') || antibodies.includes('LPS antibody');
            const hasLowSIgA = digestion.includes('Secretory IgA (low)');
            const hasLowCommensals = commensals.length > 0;

            // Categorize low beneficial bacteria
            const lowKeystone = commensals.filter(c => c.category === 'keystone');
            const lowBifido = commensals.filter(c => c.category === 'bifidobacterium');
            const lowLacto = commensals.filter(c => c.category === 'lactobacillus');
            const lowButyrate = commensals.filter(c => c.category === 'butyrate');
            const lowSpore = commensals.filter(c => c.category === 'spore');
            const lowYeast = commensals.filter(c => c.category === 'yeast');

            let protocol = `
                <div class="protocol-header">
                    <h2>Gut Zoomer Treatment Protocol</h2>
                    <p style="font-size: 1.1em; color: #666;">Beyond Balance¬Æ Herbal Solutions + Physica Energetics¬Æ Probiotic Support</p>
                </div>

                <div class="patient-details">
                    <strong>Patient:</strong> ${patientName}<br>
                    <strong>Test Date:</strong> ${testDate}<br>
                    <strong>Age Group:</strong> ${age === 'adult' ? 'Adult (18+)' : 'Child (Under 18)'}<br>
                    <strong>Protocol Generated:</strong> ${new Date().toLocaleDateString()}
                </div>

                <div class="info-box">
                    <strong>üìã Treatment Overview:</strong> This protocol follows Beyond Balance's layering and laddering approach, 
                    introducing products systematically while gradually increasing dosages based on patient tolerance. Physica Energetics 
                    probiotic support is integrated throughout for comprehensive microbiome restoration.
                </div>

                <div class="warning-box">
                    <strong>‚ö†Ô∏è CRITICAL SAFETY INFORMATION:</strong>
                    <ul>
                        <li>Always begin with drainage and detoxification support before antimicrobial therapy</li>
                        <li>Many herbs in these formulas should NOT be used if pregnant, nursing, or taking certain medications</li>
                        <li>MC-BB-1¬Æ contains Motherwort - contraindicated for those taking cardiac or blood pressure medications</li>
                        <li>Adjust dosing based on patient tolerance and Herxheimer reactions</li>
                        <li>Use TOX-EASE BIND¬Æ with all antimicrobial protocols to minimize die-off reactions</li>
                    </ul>
                </div>
            `;

            // PHASE 1: DRAINAGE & DETOXIFICATION
            protocol += `
                <div class="phase-section">
                    <h3>Phase 1: Drainage & Detoxification Support (Weeks 1-3)</h3>
                    <p><strong>Duration:</strong> 2-3 weeks before introducing antimicrobials</p>
                    <p><strong>Purpose:</strong> Open drainage pathways and support detoxification to prevent overwhelming Herxheimer reactions</p>

                    <div class="product-item">
                        <strong>TOX-EASE BIND¬Æ</strong> (Toxin Binder)
                        <div class="dosing-info">
                            <strong>Adult Dosing:</strong> 1 capsule twice daily away from food and supplements<br>
                            <strong>Pediatric Dosing:</strong> Start with 1/2 capsule once daily<br>
                            <strong>Purpose:</strong> Essential binder to prevent reabsorption of toxins during pathogen die-off<br>
                            <strong>Note:</strong> Continue throughout entire protocol - take 2+ hours away from other supplements
                        </div>
                    </div>

                    <div class="product-item">
                        <strong>COGNEASE DETOX¬Æ</strong> (Cellular Detoxification)
                        <div class="dosing-info">
                            <strong>Adult Starting Dose:</strong> 3 drops twice daily<br>
                            <strong>Adult Laddering:</strong> Increase by 1 drop every 3-4 days until reaching 8-10 drops twice daily<br>
                            <strong>Pediatric Starting Dose:</strong> 1-2 drops once daily<br>
                            <strong>Pediatric Laddering:</strong> Increase by 1 drop every 7-10 days<br>
                            <strong>Purpose:</strong> Supports cellular detoxification and drainage pathways
                        </div>
                    </div>

                    <div class="product-item">
                        <strong>TOX-EASE GL¬Æ</strong> (Glymphatic/Lymphatic Drainage)
                        <div class="dosing-info">
                            <strong>Adult Starting Dose:</strong> 3 drops twice daily<br>
                            <strong>Adult Laddering:</strong> Increase by 1 drop every 3-4 days until reaching 8-10 drops twice daily<br>
                            <strong>Pediatric Starting Dose:</strong> 1-2 drops once daily<br>
                            <strong>Pediatric Laddering:</strong> Increase by 1 drop every 7-10 days<br>
                            <strong>Purpose:</strong> Supports glymphatic and lymphatic drainage, crucial for brain-gut axis
                        </div>
                    </div>
            `;

            // ADD FLORA SYNTROPY during drainage phase as foundational support
            protocol += `
                    <div class="info-box" style="margin-top: 20px;">
                        <strong>üí° FOUNDATIONAL SPORE-BASED PROBIOTIC - OPTIONAL ADDITION:</strong>
                        <p>Flora Syntropy can be introduced during the Drainage Phase as spore-based probiotics are uniquely resilient and supportive of detoxification.</p>
                    </div>

                    <div class="product-item">
                        <strong>Flora Syntropy (Physica Energetics)</strong> - Spore-Based Probiotic Foundation
                        <div class="dosing-info">
                            <strong>Formula:</strong> Bacillus coagulans (50 Million CFU per 2 capsules, 15 Billion per gram)
                            <ul>
                                <li>Plus Chicory Inulin (FOS) 250mg - Prebiotic fiber support</li>
                                <li>Highly stable, survives stomach acid and antibiotics</li>
                                <li>Re-establishes healthy intestinal terrain</li>
                                <li>Supports B vitamin production</li>
                            </ul>
                            <strong>General Dosing:</strong> 1-2 capsules 3x daily just before meals<br>
                            <strong>Chronic/Dysbiosis:</strong> 3 capsules 3x daily just before meals<br>
                            <strong>Clinical Pearl:</strong> Can be used THROUGHOUT all phases including during antimicrobial treatment<br>
                            <strong>Note:</strong> Considered "foundational" - survives gastric juices, acids, and antimicrobial therapy
                        </div>
                    </div>
                </div>
            `;

            // PHASE 2: TARGETED ANTIMICROBIAL SUPPORT
            protocol += `
                <div class="phase-section">
                    <h3>Phase 2: Targeted Antimicrobial Support (Starting Week 4)</h3>
                    <p><strong>Duration:</strong> 8-12 weeks minimum, may extend to 16+ weeks based on response</p>
                    <p><strong>Purpose:</strong> Address specific pathogens identified on Gut Zoomer test</p>
                    <p><strong>Important:</strong> Continue all Phase 1 drainage products throughout Phase 2</p>
            `;

            // Flora Syntropy reminder for Phase 2
            protocol += `
                    <div class="info-box">
                        <strong>üåæ FLORA SYNTROPY DURING ANTIMICROBIAL PHASE:</strong>
                        <p>Flora Syntropy (Bacillus coagulans) is unique in that it can be continued throughout antimicrobial treatment 
                        as it survives antibiotics and antimicrobial herbs. Continue 1-3 capsules 3x daily if started in Phase 1, 
                        or introduce now at 1-2 capsules 3x daily before meals.</p>
                    </div>
            `;

            // Always include GI immune support
            protocol += `
                    <h4>üõ°Ô∏è Foundation GI Immune Support</h4>
                    <div class="product-item">
                        <strong>IMN-GI‚Ñ¢</strong> (Gastrointestinal Immune Support)
                        <div class="dosing-info">
                            <strong>Adult Starting Dose:</strong> 2 drops twice daily<br>
                            <strong>Adult Laddering:</strong> Increase by 1 drop every 3-4 days until reaching 8 drops twice daily<br>
                            <strong>Pediatric Starting Dose:</strong> 1 drop twice daily<br>
                            <strong>Pediatric Laddering:</strong> Increase by 1 drop every 7-10 days<br>
                            <strong>Purpose:</strong> Supports gastrointestinal immunity and mucosal healing<br>
                            <strong>Note:</strong> Formula is thicker in consistency - well tolerated
                        </div>
                    </div>
